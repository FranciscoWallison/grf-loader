{
  "compilerOptions": {
    "target": "ESNext",            
    "module": "NodeNext",          
    "lib": ["ESNext", "DOM"],            
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts", "examples/**/*.ts"]
}
